<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TaskDescription">

    <TextView
        android:id="@+id/labelStartDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start: "
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/timeStartDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelStartDesc"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:text="00:00"
        app:layout_constraintTop_toTopOf="@id/labelStartDesc"/>

    <TextView
        android:id="@+id/labelEndDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End: "
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/labelStartDesc"
        app:layout_constraintTop_toBottomOf="@id/labelStartDesc"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/timeEndDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="00:00"
        app:layout_constraintStart_toStartOf="@id/timeStartDesc"
        app:layout_constraintTop_toTopOf="@id/labelEndDesc"
        />

    <TextView
        android:id="@+id/titleTaskDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:text="TITLE TASK"
        app:layout_constraintStart_toStartOf="@id/labelEndDesc"
        app:layout_constraintTop_toBottomOf="@id/labelEndDesc"/>

    <TextView
        android:id="@+id/descriptionTaskDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTaskDesc"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>